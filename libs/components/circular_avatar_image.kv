<CircularAvatarImage>

    size_hint: None, None
    size: 90, 100
    elevation: 0

    MDRelativeLayout:
        size_hint: None, None
        size: 90, 100

        Circle:
            radius: [80,]
            size: 90, 90
            md_bg_color: 1, 0, 0, 1
            pos_hint: {"center_x": 0.5,"center_y": 0.6}

        Circle:
            radius: [80,]
            size: 85, 85
            md_bg_color: 1, 1, 1, 1
            pos_hint: {"center_x": 0.5,"center_y": 0.6}

        # profile picture
        FitImage:
            source: root.avatar
            size_hint: None, None
            size: 83, 83
            radius: [83]
            pos_hint: {"center_x": 0.5,"center_y": 0.6}

        # Username
        MDLabel:
            text: root.name
            halign: 'center'
            pos_hint: {"center_x": 0.5 ,"center_y": 0.0}
            font_size: 13
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1



<Circle@MDCard>
    size_hint: None, None
    elevation: 0
    pos_hint: {"center_x": 0.5,"center_y": 0.6}
