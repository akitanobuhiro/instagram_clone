<StoryCreator>
# yourstoryのアイコンのwidgetが占有するスペースを確保
    size_hint: None, None
    #size_hintは画面に対する比率
    size: 100, 100
    #sizeの単位はピクセル
    elevation: 0
    #elevationは画面に重ねる優先度。数が大きいほど手前に配置される
    padding: 5
    #paddingは画面端との距離(pix)
    spacing: 5
    #spacingはこのwiget(画面の機能的なパーツ)内の他のchildren(より小さなパーツ)との距離(pix)

    MDRelativeLayout:
        size_hint: None, None
        size: 90, 100

        Circle:
            radius: [80, ]
            size: 90, 90
            md_bg_color: 1, 1, 1, 1
            pos_hint: {"center_x": 0.5,"center_y": 0.6}

        Circle:
            radius: [80, ]
            size: 85, 85
            md_bg_color: 1, 1, 1, 1
            pos_hint: {"center_x": 0.5,"center_y": 0.6}

        FitImage:
            source: root.avatar
            size_hint: None, None
            size: 83, 83
            radius: [83]
            pos_hint: {"center_x": 0.5,"center_y": 0.6}

        Circle:
            size_hint: None, None
            size: 37, 37
            md_bg_color: 1, 1, 1, 1
            radius: [37, ]
            pos_hint: {"center_x": 0.8,"center_y": 0.3}

        FitImage:
            size_hint: None, None
            source: 'assets/images/plus-icon-13066.png'
            size: 35, 35
            md_bg_color: 0, 0, 1, 1
            radius: [35, ]
            pos_hint: {"center_x": 0.8,"center_y": 0.3}

        MDLabel:
            text: "Your Story"
            halign: 'center'
            pos_hint: {"center_x": 0.5,"center_y": 0.0}
            font_size: 13
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1
